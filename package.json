{
  "name": "microapp-ci",
  "version": "0.1.18",
  "description": "Taro小程序多端开发CI方案",
  "main": "bin/index.js",
  "bin": {
    "microapp-ci": "bin/index.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "start": "tsc --watch",
    "build": "tsc",
    "lint": "npx eslint --ext .ts, src",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier \"**/*.{ts,md,json}\"",
    "prettier:check": "npm run prettier -- --check",
    "prettier:fix": "npm run prettier -- --write",
    "build:weqy": "taro build --type weqy --buildEnv test",
    "build:weapp": "taro build --type weapp --buildEnv test",
    "build:alipay": "taro build --type alipay --buildEnv test",
    "build:tt": "taro build --type tt --buildEnv test",
    "build:jd": "taro build --type jd --buildEnv test",
    "build:swan": "taro build --type swan --buildEnv test",
    "build:weqy:prod": "taro build --type weqy --buildEnv prod",
    "build:weapp:prod": "taro build --type weapp --buildEnv prod",
    "build:alipay:prod": "taro build --type alipay --buildEnv prod",
    "build:tt:prod": "taro build --type tt --buildEnv prod",
    "build:jd:prod": "taro build --type jd --buildEnv prod",
    "build:swan:prod": "taro build --type swan --buildEnv prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marsczen/microapp-ci.git"
  },
  "keywords": [
    "taro",
    "ci"
  ],
  "author": "czen",
  "dependencies": {
    "@tarojs/cli": "^3.3.19",
    "archiver": "^5.3.1",
    "chalk": "^4.1.2",
    "commander": "^9.3.0",
    "dayjs": "^1.11.2",
    "fs": "^0.0.1-security",
    "fs-extra": "^10.1.0",
    "inquirer": "^8.2.4",
    "minidev": "^1.4.1",
    "miniprogram-ci": "^1.8.25",
    "ora": "^4.1.1",
    "path": "^0.12.7",
    "prettier": "^2.6.2",
    "request-promise": "^4.2.6",
    "shelljs": "^0.8.5",
    "simple-git": "^3.7.1",
    "tt-ide-cli": "^0.1.11"
  },
  "devDependencies": {
    "@types/node": "^17.0.36",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "typescript": "^4.7.2"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/marsczen/microapp-ci/issues"
  },
  "homepage": "https://github.com/marsczen/microapp-ci#readme"
}
